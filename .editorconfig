root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{md,mdx}]
trim_trailing_whitespace = false

[package*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{json,js,ts,mjs,cjs}]
indent_size = 2

[*.astro]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2

[*.html]
indent_size = 2